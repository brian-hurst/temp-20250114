{% extends 'base.html.twig' %}

{% block title %}Saved Items{% endblock %}

{% block body %}
    <h1>Saved Items</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ saved_item.id }}</td>
            </tr>
            <tr>
                <th>Item</th>
                <td>{{ saved_item.item }}</td>
            </tr>
            <tr>
                <th>DateCreated</th>
                <td>{{ saved_item.dateCreated ? saved_item.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_saved_items_index') }}">back to list</a>

    <a href="{{ path('app_saved_items_edit', {'id': saved_item.id}) }}">edit</a>

    {{ include('saved_items/_delete_form.html.twig') }}
{% endblock %}
